<!-- Offer Card -->
<div class='container-booking' style="display: flex; justify-content: center; margin-top: 60px; align-items: baseline">
  <div class='item-booking' style="margin-right: 25px;">
    <%= render 'components/offer_card', offer: @offer %>
  </div>
  <!-- Booking -->
  <div class='item-booking' style='text-align: center;'>
    <%= simple_form_for [@offer, @booking] do |f| %>
    <%= f.input :booking_date, as: :string, required: true, input_html: {class: "datepicker"} %>
    <%= f.submit class: 'button button-primary' %>
    <% end %>
  </div>
</div>

  <!-- Reviews -->
<div class="reviews mt-5">
  <h2 class="text-center font-weight-bold mb-4">Reviews</h2>
  <ul style="list-style-type: none">
    <% @offer.reviews.each do |review| %>
    <div class="mb-3 mx-auto rounded" style="background-color: #F3F3F3; border: 1px solid hsla(200, 20%, 20%, 0.1); box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); padding: 20px; width: 800px; position: relative;">
      <li class="mb-2"> <strong> <%= review.title %> </strong></li>
      <li> <%= review.content %> </li>
      <li style="position: absolute; top: 20px; right: 20px;"> ⭐️ <strong><%= review.rating %> </strong></li>
    </div>
    <% end %>
  </ul>
</div>