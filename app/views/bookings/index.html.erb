<h1>My bookings</h1>

<ol>
  <% @bookings.each do |booking| %>
      <li>Status: <%= booking.status %> ||
        <%= link_to "Cancel booking", booking_path(booking.id), method: :delete, data: { confirm: "Are you sure?" } %></li>
      <ul>
        <li>Your techy: <%= booking.user.user_name %></li>
        <li>Date: <%= booking.booking_date %></li>
        <li>Offer: <%= booking.offer.title %></li>
        <li>Description: <%= booking.offer.description %></li>
      </ul>
  <% end %>
</ol>
